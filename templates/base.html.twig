<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width" />
        <title>{% block title %}{% endblock %}</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

        {% block stylesheets %}{% endblock %}
    </head>
    <body class="m-auto">   
        <div id="top" class="icon"></div>
        <section class="bodyContent">
            <div class="col-lg-12 topNav mb-4">
                <nav class="navbar navbar-expand-lg navbar-light">
                    <div class="navbar-collapse">
                        <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('index') }}"><i class="fas fa-home"></i> Tutoriels</a>
                            </li>
                            {# <div class="nav-diviser"></div> #}
                        </ul>
                    </div>
                </nav>
            </div>

            <div class="container col-12 row mr-auto">
                {% include "leftNav.html.twig" %}
                <div id="content" class="pageWidth mt-5">
                    <div class="pageContent row-fluid">
                        <div class="content-title">
                            <div class="text-center">
                                <img src="{{ asset('uploads/title-content.png') }}" alt="">
                                <div>
                                    <h1>{% block contentTitle %}{% endblock %}</h1>
                                </div>
                            </div>
                        </div>
                        {% block body %}{% endblock %}
                    </div>
                </div>
            </div>

        </section>

        <div class="backToTop">
            <div>
                <a href="#top"><i class="fas fa-arrow-up"></i></a>
            </div>
        </div>

        <footer>
            <div>lord-mobile.net 2k20 :)</div>
        </footer>

        {% block javascripts %}{% endblock %}

        <script src="https://kit.fontawesome.com/4ab35c6c2f.js"></script>
        <script src="https://unpkg.com/@popperjs/core@2.0.0-rc.1"></script>

        {{ encore_entry_script_tags('global') }}
        {{ encore_entry_script_tags('front') }}

    </body>
</html>
