{% extends 'base.html.twig' %}

{% block title %}Les constructions{% endblock %}

{% block contentTitle %}Les constructions{% endblock %}

{% block body %}

    <div class="filter-menu">
        <div class="title">
            <div>
                <img src="{{ asset('uploads/bandeau_rouge.png') }}" alt="">
                <div class="text-center">
                    <span>Liste</span>
                </div>
            </div>
        </div>
        <div class="filter-list fam-head-list row">
            <div class="col-12 mt-2">
                <ul class="fam-head">
                    {% for c in constructions %}
                        <li value="{{ c.id }}" class="view_construction">
                            {% if c.image is null %}
                                <img src="{{ asset('uploads/default.png') }}" alt="">
                            {% else %}
                                <img src="{{ asset('uploads/images/' ~ c.image ) }}" alt="{{ c.image.alt }}">
                            {% endif %}
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>

