{% extends 'back/baseAdmin.html.twig' %}

{% block title %}Liste constructions{% endblock %}

{% block body %}

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Liste des constructions</h6>
            <a class="btn btn-success" href="{{ path('admin_construction_new') }}">Nouvelle construction</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th class="text-center">Nom</th>
                            <th class="text-center">Catégorie</th>
                            <th class="text-center">Image</th>
                            <th class="text-center">options</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th class="text-center">Nom</th>
                            <th class="text-center">Catégorie</th>
                            <th class="text-center">Image</th>
                            <th class="text-center">options</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        {% for c in constructions %}
                            <tr>
                                <td class="lm-td" scope="row">{{ c.name }}</td>
                                <td class="lm-td">{{ c.constructionCat }}</td>
                                {% if c.image is null %}
                                    <td>
                                        <div class="lm-options">
                                            <button class="btn btn-primary">
                                                <a href="{{ path('admin_construction_new_image', {'id' : c.id }) }}"><i class="fas fa-plus-circle"></i></a>
                                            </button>
                                        </div>
                                    </td>
                                {% else %}
                                    <td>
                                        <div class="lm-imgIcon m-auto">
                                            <img class="lm-img" src="{{ asset('uploads/images/' ~ c.image) }}" alt="{{ c.image.alt }}">
                                            <div class="img-overlay">
                                                <a href="{{ path('admin_construction_delete_image', {'id' : c.id }) }}"><i class="fas fa-minus-circle"></i></a>
                                            </div>
                                        </div>
                                    </td>
                                {% endif %}
                                <td>
                                    <div class="lm-options">
                                        <a class="btn btn-primary btn-circle" href="{{ path('admin_construction_edit', {'id' : c.id }) }}">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a class="btn btn-danger btn-circle" href="{{ path('admin_construction_delete', {'id' : c.id }) }}">
                                            <i class="fas fa-minus-circle"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock %}
