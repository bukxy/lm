{% extends 'back/baseAdmin.html.twig' %}

{% block title %}
    {% if editMode %}
        Edition boost
    {% else %}
        Ajout boost
    {% endif %}
{% endblock %}

{% block body %}
    {{ form_start(formBoost) }}
        <div class="row col-lg-10 col-sm-12 m-auto">
            <div class="card col-12 pb-3">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        {% if editMode %}
                            Edition du boost territoire
                        {% else %}
                            Nouveau boost territoire
                        {% endif %}
                    </h6>
                </div>
                <div class="card-body">
                    <div class="form-group row col-12 p-0 m-auto">
                        <div class="col-6">
                            {{ form_row(formBoost.name, {'label': 'Nom du boost'}) }}
                        </div>
                        <div class="col-6">
                            {{ form_row(formBoost.category, {'label': 'Cat√©gorie du boost'}) }}
                        </div>
                    </div>
                    <div class="mt-3">
                        {{ form_row(formBoost.content, {'label': 'Description'}) }}  
                    </div>
                </div>
                <button type="submit" class="btn btn-primary m-auto">
                    {% if editMode %}
                        Sauvegarder
                    {% else %}
                        Ajouter
                    {% endif %}
                </button>
            </div>
        </div>
    {{ form_end(formBoost) }}
{% endblock %}
