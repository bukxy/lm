{% extends 'back/baseAdmin.html.twig' %}

{% block title %}Liste catégories{% endblock %}

{% block body %}

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Liste des boosts territoire</h6>
            <a class="btn btn-success" href="{{ path('admin_boost_category_new') }}">Nouvelle catégorie</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Nom</th>
                            <th>options</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Nom</th>
                            <th>Options</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        {% for c in categories %}

                            <tr>
                                <td>{{ c.name }}</td>
                                <td>
                                    <button class="btn btn-primary">
                                        <a href="{{ path('admin_boost_category_edit', {'id' : c.id }) }}">Editer</a>
                                    </button>
                                    <button class="btn btn-danger">
                                        <a href="{{ path('admin_boost_category_delete', {'id' : c.id }) }}">Supprimer</a>
                                    </button>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock %}
