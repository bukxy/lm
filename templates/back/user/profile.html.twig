{% extends 'back/baseAdmin.html.twig' %}

{% block title %}Mon compte{% endblock %}
{% block category %}Mon compte{% endblock %}

{% block body %}

    {{ form_start(form) }}

        <div class="row col-12">

            <div class="form-group row col-12">
                <div class="col-6">
                    {{ form_label(form.pseudo, 'Pseudo') }}
                    {{ form_widget(form.pseudo) }}
                </div>
                <div class="col-6">
                    {{ form_label(form.email, 'Email') }}
                    {{ form_widget(form.email) }}
                </div>
            </div>
            <div class="form-group row col-12">
                <div class="col-6">
                    {{ form_label(form.password.first, 'Nouveau mot de passe') }}
                    {{ form_widget(form.password.first) }}
                </div>
                <div class="col-6">
                    {{ form_label(form.password.second, 'Répétez le mot de passe') }}
                    {{ form_widget(form.password.second) }}
                </div>
            </div>

            <div class="m-auto">
                <button type="submit" class="btn btn-primary">
                    Sauvegarder
                </button>
            </div>
        </div>

    {{ form_end(form) }}
{% endblock %}
