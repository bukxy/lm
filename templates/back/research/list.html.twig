{% extends 'back/baseAdmin.html.twig' %}

{% block title %}Constructions{% endblock %}
{% block category %}Listes des constructions{% endblock %}

{% block body %}

    <table class="table table-bordered">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Nom</th>
                <th scope="col">Cat√©gorie</th>
                <th scope="col">Contenu</th>
                <th scope="col">Image</th>
                <th scope="col">Edition / Suppression</th>
            </tr>
        </thead>
        <tbody>
            {% for r in researches %}
                <tr>
                    <th scope="row">{{ c.id }}</th>
                    <td>{{ c.name }}</td>
                    <td>{{ c.constructionCat }}</td>
                    <td>{{ c.content }}</td>

                    {% if c.image is null %}
                        <td>
                            <button class="btn btn-primary">
                                <a href="{{ path('admin_construction_new_image', {'id' : c.id }) }}"><i class="fas fa-plus-circle"></i></a>
                            </button>
                        </td>
                    {% else %}
                        <td>
                            <img class="lm-img" src="{{ asset('uploads/images/' ~ c.image) }}" alt="{{ c.image.alt }}">
                            <button class="btn btn-danger">
                                <a href="{{ path('admin_construction_delete_image', {'id' : c.id }) }}"><i class="fas fa-minus-circle"></i></a>
                            </button>
                        </td>
                    {% endif %}

                    <td>
                        <button class="btn btn-primary">
                            <a href="{{ path('admin_construction_edit', {'id' : c.id }) }}"><i class="fas fa-edit"></i></a>
                        </button>
                        <button class="btn btn-danger">
                            <a href="{{ path('admin_construction_delete', {'id' : c.id }) }}"><i class="fas fa-minus-circle"></i></a>
                        </button>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}
