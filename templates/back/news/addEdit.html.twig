{% extends 'back/baseAdmin.html.twig' %}

{% block title %}
    {% if editMode %}
        Edition News
    {% else %}
        Ajout News
    {% endif %}
{% endblock %}

{% block body %}
    {{ form_start(form) }}

        <div class="row col-lg-10 col-sm-12 m-auto">
            <div class="card col-12 pb-3">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        {% if editMode %}
                            Edition de la news
                        {% else %}
                            Nouvelle news
                        {% endif %}
                    </h6>
                </div>
                <div class="card-body">
                    <div class="form-group row col-12 p-0 m-auto">
                        <div class="col-12 mb-5">
                            {{ form_label(form.title, 'Nom de la news') }}
                            {{ form_widget(form.title) }}
                        </div>
                        <div class="col-12">
                            {{ form_label(form.content, 'Contenu') }}
                            {{ form_widget(form.content) }}
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary m-auto">
                    {% if editMode %}
                        Sauvegarder
                    {% else %}
                        Ajouter
                    {% endif %}
                </button>
            </div>
        </div>

    {{ form_end(form) }}
{% endblock %}
