{% extends 'back/baseAdmin.html.twig' %}

{% block title %}Liste images{% endblock %}

{% block body %}

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Liste des images</h6>
            <a class="btn btn-success" href="{{ path('admin_image_new') }}">Nouvelle image</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th class="text-center">Nom</th>
                            <th class="text-center">Catégorie</th>
                            <th class="text-center">Aperçu</th>
                            <th class="text-center">options</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th class="text-center">Nom</th>
                            <th class="text-center">Catégorie</th>
                            <th class="text-center">Aperçu</th>
                            <th class="text-center">options</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        {% for i in images %}
                            <tr>
                                <td class="lm-td">{{ i.name }}</td>
                                <td class="lm-td">{{ i.category }}</td>
                                <td class="text-center">
                                    <div class="lm-img m-auto">
                                        <img class="lm-img" src="{{ asset('uploads/images/' ~ i.name) }}" alt="{{ i.alt }}">
                                    </div>
                                </td>
                                <td>
                                    <div class="lm-options lm-cat">
                                        <a class="btn btn-primary btn-circle" href="{{ path('admin_image_edit', {'id' : i.id }) }}">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a class="btn btn-danger btn-circle" href="{{ path('admin_image_delete', {'id' : i.id }) }}">
                                            <i class="fas fa-minus-circle"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock %}
